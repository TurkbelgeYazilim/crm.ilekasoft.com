# Dosya yükleme güvenliği
# PHP dosyalarının çalıştırılmasını engelle
<Files "*.php">
    Order Deny,Allow
    Deny from all
</Files>

# Script dosyalarının çalıştırılmasını engelle
<Files "*.phtml">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php3">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php4">
    Order Deny,Allow
    Deny from all
</Files>

<Files "*.php5">
    Order Deny,Allow
    Deny from all
</Files>

# Sadece belirli dosya tiplerinin görüntülenmesine izin ver
<FilesMatch "\.(jpg|jpeg|png|gif|pdf)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Dizin listelemeyi engelle
Options -Indexes
